<div class="container">
  <h1>Statistics for current month</h1>

  <p class="m-0"> Your people are: </p>
  <ul class="list-reset">
    <% @people.each do |p|%>
      <li><%= link_to p.first_name + p.last_name, person_path(p.id) %><li>
    <% end %>
  </ul>

  <h2 class="mb-3"> Choose date range: </h2>
  <%= render 'search_form'%>

  <p> Current range: <%= @start_date.to_date %> - <%= @end_date.to_date%> </p>

  <div class="mb-5">
    <h2>Total credits for all people:</h2>
    <%=pie_chart @chart_credit_data, donut: true %>
    <%= render 'table', obj: @chart_credit_data%>
  </div>

  <div>
    <h2 >Total debits for all people:</h2>
    <%=pie_chart @chart_debit_data, donut: true %>
    <%= render 'table', obj: @chart_debit_data%>
  </div>
</div>