<% if user_signed_in? %>
  <br />
  <div class="container">
    <div class="jumbotron">
      <h1>All categories: </h1>
      <% @categories.each do |category|%>
        <div class="rounded-pill <%= category.transaction_type == 'Debit' ? 'btn btn-success btn-lg' : 'btn btn-warning btn-lg' %>">
          <%= link_to category.title, category_path(category), class: "link-light"%>
        </div>
      <% end %>
    </div>
    <br />
    <%= link_to 'New Category', new_category_path, class:"btn btn-secondary" %>
  </div>
<% end %>