<% if user_signed_in? %>
  <br />
  <div class="container">
    <h1>Categories</h1>
    <br />
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Type</th>
          <th>Count</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.count %></td>
            <td><%= link_to 'Show', category %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Category', new_category_path, class:"btn btn-secondary" %>
  </div>
<% else %>
  <div class="card bg-dark text-white text-center" style="height: 94vh; overflow: hidden;">
    <img src="https://www.polsov.com/upload/014/u1405/b/d/a86b4cd5.jpg" class="card-img" alt="index images">
    <div class="card-img-overlay">
      <h5 class="card-title">Welcome to the Best Finance Apps to Manage Bills and Debts!</h5>
      <p class="card-text">The main benefit of capital is not to make more money, but to make money for the sake of improving life.</p>
      <p class="card-text">For use it, sign in or sign up</p>
    </div>
  </div>
<% end %>