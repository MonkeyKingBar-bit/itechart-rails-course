<% if user_signed_in? %>
  <br />
  <div class="container">
    <h1>Notes</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>
        <th>Text</th>
        <th>Created at</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @notes.each do |note| %>
        <tr>
          <td><%= link_to note.body %></td>
          <td><%= note.created_at %></td>
          <td><%= link_to 'Edit', edit_note_path(note), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br />
    <%= link_to 'New Note', new_note_path, class:"btn btn-secondary" %>
  </div>
<% end %>