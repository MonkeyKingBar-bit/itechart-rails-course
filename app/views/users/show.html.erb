<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h1 class="display-4">
      <%= @user.login %>
    </h1>

    <p class="lead">
      <%= @user.password %>
    </p>
    <br/>
    <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-secondary" %> |
    <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> |
    <%= link_to 'Back', users_path, class:"btn btn-dark" %>
  </div>
</div>
