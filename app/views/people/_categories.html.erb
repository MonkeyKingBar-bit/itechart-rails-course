<% if obj.any? %>
  <br />
    <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Transactions</th>
      <th>Total amount<th>
    </tr>
    </thead>

    <tbody>
    <% obj.each do |person_category|%>
      <tr>
        <td class="text-center">
          <div class="rounded-pill <%= person_category.category.transaction_type == 'Debit' ? 'btn btn-success btn-lg' : 'btn btn-warning btn-lg' %>">
            <%= link_to person_category.category.title, category_path(person_category.category), class: "link-light"%>
          </div>
        </td>
        <td>
          <% if person_category.money_transactions.any? %>
            <ul class="list-group">
                <% person_category.money_transactions.order(important: :desc, created_at: :asc).each do |transaction|%>
                <% if transaction.important %>
                  <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-danger">
                <% else %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                <% end %>
                <% if transaction.note%>
                  <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-success">
                <%end%>

                <div class="d-flex w-100 justify-content-between ">
                  <span class="badge bg-primary rounded-pill"><%= transaction.count  %></span>
                  <small><%= transaction.created_at.to_formatted_s(:short) %></small>
                </div>
                    <div class="d-flex w-50 justify-content-around">
                      <%= link_to 'Update', edit_money_transaction_path(transaction), class:"btn btn-secondary btn-sm" %> |
                      <%= link_to 'Delete', money_transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
                    </div>
                  </li>
              <%end%>
            </ul>
          <% else %>
            None
          <% end %>
        </td>
        <td class="text-center">
          <h3>
            <% if person_category.category.transaction_type == 'Credit' %>
              - <%= person_category.money_transactions.sum(&:count) %>
            <% else %>
              + <%= person_category.money_transactions.sum(&:count) %>
            <% end %>
          </h3>
        <td>
      <tr>
    <% end %>
    </tbody>
  </table>
    <div>
      <ul class="list-group">
        <li class="list-group-item list-group-item-danger"> important transaction</li>
        <li class="list-group-item list-group-item-success">transaction with note </li>
      </ul>
    </div>
<% else %>
  <p> No categories yet ... <p>
<% end %>