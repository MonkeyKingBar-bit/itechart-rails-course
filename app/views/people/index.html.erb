<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>People</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
      <% if person.user == current_user %>
        <tr>
          <td><%= link_to person.first_name + ' ' + person.last_name, person %></td>
          <td><%= person.description %></td>
          <td><%= person.created_at %></td>

            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>

        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Person', new_person_path, class:"btn btn-secondary" %>
</div>